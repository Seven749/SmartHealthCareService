<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sevenrecy.smarthealthcareservice.dao.DoctorDao">
    <select id="selectDoctor" parameterType="String" resultType="Doctor">
        SELECT * FROM doctor WHERE doc_id=#{doc_id} AND pwd=#{pwd}
    </select>

    <select id="selectDoctorById" parameterType="String" resultType="Doctor">
        SELECT * FROM doctor WHERE doc_id=#{doc_id}
    </select>

    <select id="selectDoctorByDept" parameterType="int" resultType="Doctor">
        SELECT * FROM doctor WHERE dept_id=#{dept_id} ORDER BY doc_id
    </select>
</mapper>